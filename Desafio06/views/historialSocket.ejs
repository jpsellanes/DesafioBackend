        socketHistorial.emit("new-product",productos);
        console.log("productosUpdateARRANCO")
        
    })
    
    function showProductList(productos){
            console.log(productos)
                const html = productos.map((elem, index)=>{
                return(`
                <div>
                    <tr>${elem.title}</tr>
                    <tr>${elem.price}</tr>
                    <tr>${elem.thumbnail}</tr>
